<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.fefu.helloworld">

    <application
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.StartScreen">

        <activity
            android:name=".MainActivity"
            android:label="Main Activity"
            android:exported="true"
            android:theme="@style/Theme.StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivityDetailActivity"
            android:label="Детали активности"
            android:theme="@style/Theme.StartScreen" />

        <activity
            android:name=".ChangePasswordActivity"
            android:label="Изменить пароль"
            android:theme="@style/Theme.StartScreen" />

        <activity
            android:name=".NewActivityActivity"
            android:label="Новая активность"
            android:theme="@style/Theme.StartScreen" />

        <activity
            android:name=".TrackingActivity"
            android:label="Отслеживание активности"
            android:theme="@style/Theme.StartScreen" />

    </application>
</manifest>